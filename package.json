{
  "name": "achtung-die-kurve",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern recreation of the classic Achtung die Kurve game",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "dev:full": "./scripts/dev.sh",
    "build": "npm run type-check && vite build",
    "build:safe": "npm run type-check && node --max-old-space-size=8192 ./node_modules/.bin/vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "server": "cd server && npm start"
  },
  "keywords": ["game", "phaser", "typescript", "achtung-die-kurve", "curve-fever"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "phaser": "^3.80.1",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  }
}
